{
  "name": "electron-browser",
  "version": "1.0.0",
  "description": "A modern web browser built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "browser",
    "electron",
    "web"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.nebulabrowser.app",
    "productName": "Nebula Browser",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "favicon.ico",
      "target": "nsis"
    }
  }
}
